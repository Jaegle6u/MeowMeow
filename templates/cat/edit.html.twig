

{% extends "front_layout.html.twig" %}

{% block content %}
<div class="container vh-100 vw-100  justify-content-center align-items-center">
 
        
        
    <div class="row w-100 h-100 justify-content-center align-items-center">
        
    
       
        
        <div class="col align-items-center justify-content-center h-75 overflow-auto">
        <h1 class="text-center fw-bold fs-2">Modifier fiche de <span class="fw-bold">{{ entity.name}}</span></h1>

    
        {% embed "decorator/_form.html.twig" %}
        {% block formBody %}
            {{ form_widget(form) }}
<br>
            {% if entity.image is not empty %}
                <img src="{{ asset(entity.image.webPath) }}" alt="{{ entity.name }}" style="max-width:25%;">
            {% endif %}
        {% endblock %}
    {% endembed %}
        </div>
    </div>
</div>
    

{% endblock %}
