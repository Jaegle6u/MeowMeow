{% extends "front_layout.html.twig" %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center vh-100 vw-100">
    <div class="row w-75 h-75 d-flex justify-content-center align-items-center" >
        <div class="col p-3"style="background-color:white">
            <h1>Supprimer la fiche de {{ entity.name }}?</h1>

            <form action="" method="post">
                <div class="alert alert-danger">
                    Voulez-vous vraiment supprimer la fiche de {{ entity.name }}?
                </div>

                <button class="btn btn-danger">Oui, je la supprime</button>
                <a href="{{ path('app_cat_list') }}" class="btn btn-light">Non, je la garde</a>

                <input type="hidden" name="token" value="{{ csrf_token('delete' ~ entity.id) }}">
            </form>
        </div>
    </div>
</div>

{% endblock %}