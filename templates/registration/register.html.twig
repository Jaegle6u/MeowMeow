{% extends 'front_layout.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container vh-100 vw-100  justify-content-center align-items-center">
 
        
        
    <div class="row  h-100 justify-content-center align-items-center">
        
    
       
        
        <div class="col align-items-center justify-content-center h-75 overflow-auto">
<h1 class=" text-center fw-bold fs-2 ">S'inscrire</h1>
<div class="form_container position-absolute top-50 start-50 translate-middle">
<div class="form">
    

    {{ form_start(registrationForm) }}
        <div style="display: flex;justify-content:space-between">
            <div style="width: 39%;">
                {{ form_row(registrationForm.prenom, {
                    label: 'Prénom'
                }) }}
            </div>
            <div style="width: 39%">
            {{ form_row(registrationForm.nom, {
                label: 'Nom'
            }) }}
            </div>
            <div style="width: 19%">
                {{ form_row(registrationForm.telephone, {
                    label: 'Téléphone'
                }) }}
            </div>
        </div>
        <div style="display: flex;justify-content:space-between">
            <div style="width: 19%">
                {{ form_row(registrationForm.codePostal, {
                    label: 'Code postal'
                }) }}
            </div>
            <div style="width: 79%">
                {{ form_row(registrationForm.ville, {
                    label: 'Ville'
                }) }}
            </div>
        </div>
            <div style="width: 100%">
                {{ form_row(registrationForm.rue, {
                    label: 'Numéro et rue'
                }) }}
            </div>
        
        <div style="display: flex;justify-content:space-between">
            <div style="width: 34%">
                {{ form_row(registrationForm.email, {
                    label: 'Email'
                }) }}
            </div>
            <div style="width: 64%">
                {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
                }) }}
            </div>
        </div><br>


        <div style="display:flex;justify-content:center">
            <div>
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Termes et conditions'
                }) }}
            </div><br>
        </div>
        <div style="text-align: center">
            <br>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
</div>
</div>

</div></div></div>
{% endblock %}
